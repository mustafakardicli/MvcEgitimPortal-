@section Scripts {
        <script>
            $(document).ready(function () {
                $("#baslik").html("Kayıt Ekle");
                LoadSubjects();
                LoadLessons();
                $("#btnKaydet").click(function () {
                    var subjectName = $("#txtKonuAdi").val();
                    var lessonId = $("#ddlLesson").val();
                    var subjectId = $("#txtId").val();

                    if (subjectName == "" || subjectName == null) {
                        $("#sonuc")
                            .removeClass()
                            .addClass("alert alert-danger")
                            .html("Konu Adı Giriniz!");
                        return false;
                    }

                    $.ajax({
                        url: "/Admin/SubjectAddEditAjax",
                        type: "POST",
                        data: { subjectId: subjectId, subjectName: subjectName, lessonId: lessonId },
                        success: function (data) {
                            if (data.status) {
                                $("#sonuc")
                                    .removeClass()
                                    .addClass("alert alert-success")
                                    .html(data.message);
                                LoadSubjects();
                                // Düzenleme Formunu Sıfırla
                                $("#txtKonuAdi").val("");
                                $("#ddlLesson").val("");
                                $("#txtId").val("");
                                $("#btnVazgec").hide();
                                $("#btnSil").hide();
                                $("#baslik").html("Kayıt Ekle");
                            } else {
                                $("#sonuc")
                                    .removeClass()
                                    .addClass("alert alert-danger")
                                    .html(data.message);
                            }
                        },
                        error: function (e) { }
                    });
                });

                $(document).on("click", ".edit", function () {
                    var subjectId = $(this).closest("tr").attr("id");
                    $("#baslik").html("Kayıt Düzenle");
                    $("#btnVazgec").show();
                    $("#btnSil").show();
                    $.ajax({
                        url: "/Admin/SubjectByIdAjax",
                        type: "Get",
                        data: { subjectId: subjectId },
                        success: function (data) {
                            $("#txtKonuAdi").val(data.subjectName);
                            $("#ddlLesson").val(data.lessonId);
                            $("#txtId").val(data.subjectId);
                        },
                        error: function () { }
                    });
                });

                $("#btnVazgec").click(function () {
                    $("#txtKonuAdi").val("");
                    $("#ddlLesson").val("");
                    $("#txtId").val("");
                    $("#btnVazgec").hide();
                    $("#btnSil").hide();
                    $("#baslik").html("Kayıt Ekle");
                });

                $("#btnSil").click(function () {
                    var subjectId = $("#txtId").val();
                    $.ajax({
                        url: "/Admin/SubjectRemoveAjax",
                        type: "Get",
                        data: { subjectId: subjectId },
                        success: function (data) {
                            if (data.status) {
                                $("#sonuc")
                                    .removeClass()
                                    .addClass("alert alert-success")
                                    .html(data.message);
                                LoadSubjects();
                                $("#txtKonuAdi").val("");
                                $("#ddlLesson").val("");
                                $("#txtId").val("");
                                $("#btnVazgec").hide();
                                $("#btnSil").hide();
                                $("#baslik").html("Kayıt Ekle");
                            } else {
                                $("#sonuc")
                                    .removeClass()
                                    .addClass("alert alert-danger")
                                    .html(data.message);
                            }
                        },
                        error: function () { }
                    });
                });

                function LoadSubjects() {
                    $.ajax({
                        url: "/Admin/SubjectListAjax",
                        type: "Get",
                        success: function (data) {
                            var rows = "";
                            $.each(data, function (index, item) {
                                rows += "<tr id='" + item.subjectId + "'>";
                                rows += "<td>" + (index + 1) + "</td>";
                                rows += "<td><a href='javascript:void(0);' class='questions'>" + item.subjectName + "</a></td>";
                                rows += "<td>" + item.lessonId + "</td>";
                                rows += "<td><a href='javascript:void(0);' class='btn btn-primary edit'>Düzenle</a></td>";
                                rows += "</tr>";
                            });
                            $("#tbSubject tbody").html(rows);
                        },
                        error: function () { }
                    });
                }

                    function LoadLessons() {
                    $.ajax({
                        url: "/Admin/LessonListAjax",
                        type: "Get",
                        success: function (data) {
                            var options = "<option value=''>Ders Seçiniz</option>";
                            $.each(data, function (index, item) {
                                options += "<option value='" + item.lessonId + "'>" + item.lessonName + "</option>";
                            });
                            $("#ddlLesson").html(options);
                        },
                        error: function () { }
                    });
                }

            });
        </script>
}




